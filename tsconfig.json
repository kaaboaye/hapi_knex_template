{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "build"
  },

  "include": ["src/**/*"]
}
